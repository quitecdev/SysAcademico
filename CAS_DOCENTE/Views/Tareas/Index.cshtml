@model  List<Model.Services.Docente.HorarioTarea>
@{
    ViewBag.Title = "Tareas";
}
<style>
    th {
        background: #8b1716;
        color: #fff;
        padding: 20px !important;
    }

    td {
        padding: 20px !important;
    }
</style>

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">@ViewBag.Title</h4>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            @if (Model != null)
            {
                <table class="table table-hover table-striped m-0">
                    <thead>
                        <tr>
                            <th>Sede</th>
                            <th>Carrera</th>
                            <th>Materia</th>
                            <th>Paralelo</th>
                            <th>Horario</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DESCRIPCION_UNIVERSIDAD</td>
                                    <td>@item.DESCRIPCION_CARRERA</td>
                                    <td>@item.DESCRIPCION_MATERIA</td>
                                    <td>@item.DESCRIPCION_PARALELO</td>
                                    <td>@item.HORARIO</td>
                                    <td>
                                        @*@Html.ActionLink("Ir","", new { id = item.ID }, new { @class = "MyCustomCssClassName" })*@
                                        <a href='@Url.Action("Crear","Tareas")/@item.ID_SEDE/@item.ID_CARRERA/@item.ID_MATERIA/@item.ID_PARALELO/@item.ID_INTERVALO_DETALLE' title="Crear Tarea" class="on-default edit-row text-custom"><i class="zmdi zmdi-collection-text"></i></a>
                                        <a href='@Url.Action("DetalleTareas","Tareas")/@item.ID_SEDE/@item.ID_CARRERA/@item.ID_MATERIA/@item.ID_PARALELO/@item.ID_INTERVALO_DETALLE' title="Ver Tareas" class="on-default edit-row text-inverse"><i class="zmdi zmdi-assignment-o"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                            }
        </div>
    </div>
</div>
