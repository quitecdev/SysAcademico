@model Model.Services.Docente.ChangePassword
@{
    ViewBag.Title = "CambiarConstraseña";
}

@using (Html.BeginForm("CambiarConstraseña", "Account", FormMethod.Post))
{
    <div class="col-sm-12">
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                @Html.EditorFor(model => model.CLAVE_USUARIO, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese su nueva contraseña" } })
            </div>
            @Html.ValidationMessageFor(model => model.CLAVE_USUARIO, "", new { @class = "parsley-required" })
        </div>
    </div>
    <div class="col-sm-12">
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                @Html.EditorFor(model => model.CLAVE_VALIDAR, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese su nueva contraseña" } })
            </div>
            @Html.ValidationMessageFor(model => model.CLAVE_VALIDAR, "", new { @class = "parsley-required" })
        </div>
    </div>
    <div class="col-sm-12">
        @*<button type="submit" class="btn btn-custom waves-effect waves-light">Guardar</button>*@
        <button type="submit" id="load" class="btn btn-labeled btn-danger ripple" data-loading-text="<span class='btn-label'><i class='fa fa-circle-o-notch fa-spin'></i></span>Guardar<span class='md-ripple'></span>"><span class="btn-label"><i class="fa fa-save"></i></span> Guardar<span class="md-ripple"></span></button>
    </div>
}

