@model Model.Services.Docente.ChangePassword
@{
    Layout = "";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- App title -->
    <title>CAS - Cambiar Contraseña</title>
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/core.css" rel="stylesheet" />
    <link href="~/assets/css/components.css" rel="stylesheet" />
    <link href="~/assets/css/icons.css" rel="stylesheet" />
    <link href="~/assets/css/pages.css" rel="stylesheet" />
    <link href="~/assets/css/menu.css" rel="stylesheet" />
    <link href="~/assets/css/responsive.css" rel="stylesheet" />
    <link href="~/assets/css/login.css" rel="stylesheet" />
    <script src="~/assets/js/modernizr.min.js"></script>
</head>
<body>
    <div class="container-fluid contenedor">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-8 img-fondo-contenido">
                <img src="~/assets/images/IMG_0042.jpg" style="width: 100%; height: 100vh;" />
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 login-contenido">
                <section id="logo">
                    <a href="#">
                        <img src="~/assets/images/CAS-logo.png" alt="" />
                    </a>
                </section>
                <section class="login">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group group-login less-space">
                            <h4 class="text-custom">Cambiar contraseña</h4>
                            <p>
                                Antes de ingresar a CAS - ACADÉMICO se requiere ingresar su nueva contraseña:
                            </p>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.EditorFor(model => model.CLAVE_USUARIO, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese su nueva contraseña" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.CLAVE_USUARIO, "", new { @class = "parsley-required" })
                            <br />
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.EditorFor(model => model.CLAVE_VALIDAR, new { htmlAttributes = new { @class = "form-control", placeholder = "Repita su contraseña" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.CLAVE_VALIDAR, "", new { @class = "parsley-required" })
                        </div>
                        <button type="submit" class="btn btn-block btn-custom">Enviar</button>
                        <br />

                        if (ViewBag.Envio == true)
                        {
                            <div class="alert alert-success alert-icon">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <div class="icon"><i class="icon ion-ios7-close-empty"></i></div>
                                <strong>Bien hecho!</strong> Se ha cambiado correctamente su contraseña.
                            </div>
                        }

                        <div class="form-group group-login less-space">
                            <a href="@Url.Action("Login", "Account")">Iniciar Sesión</a>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
    <!-- jQuery  -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/detect.js"></script>
    <script src="~/assets/js/fastclick.js"></script>
    <script src="~/assets/js/jquery.slimscroll.js"></script>
    <script src="~/assets/js/jquery.blockUI.js"></script>
    <script src="~/assets/js/waves.js"></script>
    <script src="~/assets/js/wow.min.js"></script>
    <script src="~/assets/js/jquery.nicescroll.js"></script>
    <script src="~/assets/js/jquery.scrollTo.min.js"></script>

    <!-- App js -->
    <script src="~/assets/js/jquery.core.js"></script>
    <script src="~/assets/js/jquery.app.js"></script>

    @*<script src="~/assets/js/General.js"></script>*@

</body>
</html>
