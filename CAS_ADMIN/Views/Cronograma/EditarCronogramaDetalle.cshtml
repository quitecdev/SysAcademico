@model Model.Services.Admin.CronogramaDetalle
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Cronograma Detalle</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("EditarCronogramaDetalle", "Cronograma", FormMethod.Post, new { onsubmit = "return SubmitForm(this,'" + @Url.Action("EditarCronogramaDetalle", "Cronograma", new { id = string.Empty }) + "')", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ID_CRONOGRAMA_DETALLE)
                        @Html.HiddenFor(model => model.ID_CRONOGRAMA)
                        @Html.HiddenFor(model => model.SEMANA_CRONOGRAMA)
                        @Html.HiddenFor(model => model.FECHA_CRONOGRAMA)
                        <div class="form-group">
                            @Html.LabelFor(model => model.TEMA, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.TEMA, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TEMA, "", new { @class = "text-custom" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.TEMATICA, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.TEMATICA, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TEMATICA, "", new { @class = "text-custom" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.REQUERIMIENTO, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.REQUERIMIENTO, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.REQUERIMIENTO, "", new { @class = "text-custom" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.FERIADO, new { @class = "col-md-3 control-label" })
                            <div class="col-sm-6">
                                <div class="checkbox checkbox-primary">
                                    @Html.CheckBoxFor(model => model.FERIADO, new { id = "ckb_discapacidad" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <button type="submit" class="btn btn-custom waves-effect waves-light m-b-5 btn-loding" data-loading-text="<span class='btn-label'><i class='fa fa-circle-o-notch fa-spin'></i></span> Guardar<span class='md-ripple'></span>"><span class="btn-label"><i class="fa fa-save"></i></span> Guardar<span class="md-ripple"></span></button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

