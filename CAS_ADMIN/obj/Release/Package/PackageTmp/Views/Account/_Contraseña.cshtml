
@model Model.Services.Admin.ChangePassword
@{
    ViewBag.Title = "CambiarConstraseña";
}


<div class="row">
    <div class="col-sm-4 text-center">

    </div>
    <div class="col-sm-8">

        @using (Html.BeginForm("CambiarConstraseña", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <h4 class="col-sm-3 control-label">
                    <b>Cambiar Contraseña</b>
                </h4>

            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Contraseña</label>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.CLAVE_USUARIO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CLAVE_USUARIO, "", new { @class = "parsley-required" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Repetir Contraseña</label>
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.CLAVE_VALIDAR, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CLAVE_VALIDAR, "", new { @class = "parsley-required" })
                </div>
            </div>
            <div class="form-group m-b-0">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-labeled btn-danger ripple" data-loading-text="<span class='btn-label'><i class='fa fa-circle-o-notch fa-spin'></i></span>Guardar<span class='md-ripple'></span>"><span class="btn-label"><i class="fa fa-save"></i></span> Guardar<span class="md-ripple"></span></button>
                </div>
            </div>
        }
    </div>
</div>


