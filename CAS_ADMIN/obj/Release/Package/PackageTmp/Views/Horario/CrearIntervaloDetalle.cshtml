@model Model.Services.Admin.IntervaloDetalle
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Datos Horario</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("CrearIntervaloDetalle", "Horario", FormMethod.Post, new { onsubmit = "return SubmitForm(this,'" + @Url.Action("CrearIntervaloDetalle", "Horario", new { id = string.Empty }) + "')", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ID_INTERVALO_DETALLE)
                        <div class="form-group">
                            @Html.LabelFor(model => model.ID_INTERVALO, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(x => x.ID_INTERVALO, new SelectList(new Model.Services.Admin.Intervalo().ObtenerIntervalo(), "ID_INTERVALO", "DESCRIPCION_INTERVALO"), " ", new { @class = "form-control"})
                                @Html.ValidationMessageFor(model => model.ID_INTERVALO, "", new { @class = "text-custom" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.INICIO_INTERVALO, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.INICIO_INTERVALO, new { htmlAttributes = new { @class = "form-control tiempo" } })
                                @Html.ValidationMessageFor(model => model.INICIO_INTERVALO, "", new { @class = "text-custom" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.FIN_INTERVALO, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.FIN_INTERVALO, new { htmlAttributes = new { @class = "form-control tiempo" } })
                                @Html.ValidationMessageFor(model => model.FIN_INTERVALO, "", new { @class = "text-custom" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <button type="submit" class="btn btn-custom waves-effect waves-light m-b-5 btn-loding" data-loading-text="<span class='btn-label'><i class='fa fa-circle-o-notch fa-spin'></i></span> Guardar<span class='md-ripple'></span>"><span class="btn-label"><i class="fa fa-save"></i></span> Guardar<span class="md-ripple"></span></button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    jQuery('.tiempo').timepicker({
        showMeridian: false
    });
</script>