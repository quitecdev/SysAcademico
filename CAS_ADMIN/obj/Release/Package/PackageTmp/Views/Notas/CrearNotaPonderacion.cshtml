@model Model.Services.Admin.NotaPonderacion
@{
    Layout = null;
}

<script>
    $(document).ready(function () {
        $('.decimal').numeric(".");
    });
</script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Nota Ponderacion</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-lg-12">
                    @using (Html.BeginForm("CrearNotaPonderacion", "Notas", FormMethod.Post, new { onsubmit = "return SubmitForm(this,'" + @Url.Action("CrearNotaPonderacion", "Notas", new { id = string.Empty }) + "')", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ID_PONDERACION)
                        @Html.HiddenFor(model => model.ID_NOTA_DETALLE)
                        <div class="form-group">
                            @Html.LabelFor(model => model.DESCRIPCION_PONDERACION, new { @class = "col-md-3 control-label", @readonly = "readonly" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.DESCRIPCION_PONDERACION, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DESCRIPCION_PONDERACION, "", new { @class = "text-custom" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.VALOR_PONDERACION, new { @class = "col-md-3 control-label", @readonly = "readonly" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.VALOR_PONDERACION, new { htmlAttributes = new { @class = "form-control decimal" } })
                                @Html.ValidationMessageFor(model => model.VALOR_PONDERACION, "", new { @class = "text-custom" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <button type="submit" class="btn btn-custom waves-effect waves-light m-b-5 btn-loding" data-loading-text="<span class='btn-label'><i class='fa fa-circle-o-notch fa-spin'></i></span> Guardar<span class='md-ripple'></span>"><span class="btn-label"><i class="fa fa-save"></i></span> Guardar<span class="md-ripple"></span></button>
                            </div>
                        </div>
                    }
                </div><!-- end col -->
            </div>
        </div>
    </div>
</div>
