@model List<Model.Services.Admin.Notificacion>
@using System.Text.RegularExpressions;
@if (Model != null)
{

    <ul class="list-group list-no-border user-list">

        @foreach (var item in Model)
        {

            if (item.ESTADO_NOTIFICACION == 0)
            {
                <li class="list-group-item">
                    @if (item.PRIORIDAD_NOTIFICACION != 3)
                    {
                        <a href="javascript:void(0);" onclick="VerNotificacion(@item.ID_NOTIFICACION)" class="user-list-item">
                            <div class="icon">
                                <i class="zmdi zmdi-comment"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">@item.ASUNTO_NOTIFICACION</span>
                                <span class="desc">@item.TXT_NOTIFICACION</span>
                                <span class="time">@item.FECHA_NOTIFICACION</span>
                            </div>
                        </a>
                    }
                    else
                    {
                        <a href="javascript:void(0);" onclick="VerSugerencia(@item.ID_NOTIFICACION)" class="user-list-item">
                            <div class="icon">
                                <i class="zmdi zmdi-comment"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">@item.ASUNTO_NOTIFICACION</span>
                                <span class="desc">@item.TXT_NOTIFICACION</span>
                                <span class="time">@item.FECHA_NOTIFICACION</span>
                            </div>
                        </a>
                    }
                </li>
            }
            else
            {
                <li class="list-group-item active">
                    @if (item.PRIORIDAD_NOTIFICACION != 3)
                    {
                        <a href="javascript:void(0);" onclick="VerNotificacion(@item.ID_NOTIFICACION)" class="user-list-item">
                            <div class="icon">
                                <i class="zmdi zmdi-comment"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">@item.ASUNTO_NOTIFICACION</span>
                                <span class="desc">@item.TXT_NOTIFICACION</span>
                                <span class="time">@item.FECHA_NOTIFICACION</span>
                            </div>
                        </a>
                    }
                    else
                    {
                        <a href="javascript:void(0);" onclick="VerSugerencia(@item.ID_NOTIFICACION)" class="user-list-item">
                            <div class="icon">
                                <i class="zmdi zmdi-comment"></i>
                            </div>
                            <div class="user-desc">
                                <span class="name">@item.ASUNTO_NOTIFICACION</span>
                                <span class="desc">@item.TXT_NOTIFICACION</span>
                                <span class="time">@item.FECHA_NOTIFICACION</span>
                            </div>
                        </a>
                    }
                </li>
            }
        }
    </ul>

}

