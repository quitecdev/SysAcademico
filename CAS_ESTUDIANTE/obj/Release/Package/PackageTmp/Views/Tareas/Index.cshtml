@model  List<Model.Services.Estudiante.Tareas>
@{
    ViewBag.Title = "Tareas";
}
<style>
    th {
        background: #8b1716;
        color: #fff;
        padding: 20px !important;
    }

    td {
        padding: 20px !important;
    }
</style>

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">@ViewBag.Title</h4>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            @if (Model != null)
            {
                <table class="table table-hover table-striped m-0">
                    <thead>
                        <tr>
                            <th>Sede</th>
                            <th>Carrera</th>
                            <th>Materia</th>
                            <th>Tema</th>
                            <th>Fecha Entrega</th>
                            <th>Calificación</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DESCRIPCION_UNIVERSIDAD</td>
                                    <td>@item.DESCRIPCION_CARRERA</td>
                                    <td>@item.DESCRIPCION_MATERIA</td>
                                    <td>@item.TEMA_TAREA</td>
                                    <td>@item.FECHA_FIN_TAREA.Value.ToString("dd/MM/yyyy")</td>
                                    <td>@item.NOTA_TAREA</td>
                                    <td>
                                        @if (string.IsNullOrEmpty(item.ADJUNTO_TAREA))
                                        {

                                        }
                                        else
                                        {
                                            <a href="@Url.Content(item.ADJUNTO_TAREA)" target="_blank" class="on-default edit-row text-dark">
                                                <i class="fa fa-file"></i>
                                            </a>
                                        }
                                    </td>
                                    <td>
                                        <a href='@Url.Action("Detalle","Tareas")/@item.ID_ESTUDIANTE_TAREA' title="Ver Tareas" class="on-default edit-row text-custom"><i class="zmdi zmdi-assignment-o"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                            }
        </div>
    </div>
</div>
