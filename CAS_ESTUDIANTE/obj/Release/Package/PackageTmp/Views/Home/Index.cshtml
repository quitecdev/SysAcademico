@{
    ViewBag.Title = "Inicio";
}

<!-- Page-Title -->

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title">@ViewBag.Title</h4>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="container">
            <div class="row">
                <div class="masonry-container">
                    <div class="col-md-6 col-lg-4 masonry-column">
                        <div class="card-box">
                            <h3 class="panel-title m-t-0 text-right text-custom"><b>OPEN HOUSE</b></h3>
                            <p class="text-muted m-b-20 font-13 text-right">
                                <a href="https://academico.quitec.com.ec/evento" target="_blank" class="btn btn-custom btn-lg waves-effect waves-light m-b-5">
                                    <i class="zmdi zmdi-assignment-o m-r-5"></i> <span>Regístrate</span>
                                </a>
                            </p>
                            <img src="~/assets/images/cursos/open_house_2019.jpeg" class="img-responsive"/>

                        </div>
                    </div>
                </div>
            </div>
            <!-- End row -->

        </div>
        <!-- end row -->
    </div>
</div>



@section Scripts
{
    <script>
        $(window).load(function(){
            var $container = $('.masonry-container');
            $container.isotope({
                filter: '*'
            });
        });

    </script>
}